<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bartleby.App.ViewModels"
             xmlns:models="clr-namespace:Bartleby.Core.Models;assembly=Bartleby.Core"
             x:Class="Bartleby.App.Views.WorkItemsPage"
             x:DataType="vm:WorkItemsViewModel"
             Title="Work Items">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Toolbar -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Padding="0,0,0,10">
            <Button Text="Sync from Source"
                    Command="{Binding SyncFromSourceCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
            <Button Text="Refresh"
                    Command="{Binding LoadWorkItemsCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>
        </HorizontalStackLayout>

        <!-- Work Items List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding WorkItems}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedWorkItem}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:WorkItem">
                    <Frame Margin="0,5" Padding="15">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Title}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Frame Grid.Row="0" Grid.Column="1"
                                   Padding="8,4"
                                   BackgroundColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                <Label Text="{Binding Status}"
                                       TextColor="White"
                                       FontSize="12"/>
                            </Frame>

                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding Description}"
                                   TextColor="Gray"
                                   MaxLines="2"
                                   LineBreakMode="TailTruncation"/>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Spacing="5" Margin="0,5,0,0">
                                <Label Text="{Binding Source, StringFormat='Source: {0}'}"
                                       FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding ExternalId, StringFormat='#{0}'}"
                                       FontSize="12" TextColor="Gray"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No work items"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="Click 'Sync from Source' to import work items"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>

</ContentPage>
